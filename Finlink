<body>
  <header>FinLink Directory</header>
  <div class="container">
    <div class="form-section">
      <h2>Add a New Link</h2>
      <input type="text" id="linkTitle" placeholder="Enter title for your link" />
      <input type="url" id="linkURL" placeholder="Enter the full URL (e.g., https://example.com)" />
      <input type="file" id="linkImage" accept="image/*" />
      <button onclick="addLink()">Add Link</button>
    </div>

    <div class="search-bar">
      <input type="text" id="searchInput" placeholder="Search links by title..." oninput="searchLinks()" />
    </div>

    <div id="linkList" class="link-grid"></div>
  </div>

  <script>
    let links = JSON.parse(localStorage.getItem('finLinks')) || [];

    function addLink() {
      const title = document.getElementById('linkTitle').value;
      const url = document.getElementById('linkURL').value;
      const imageInput = document.getElementById('linkImage');
      const reader = new FileReader();

      if (!title || !url || !imageInput.files[0]) {
        alert('Please fill out all fields.');
        return;
      }

      reader.onload = function (e) {
        const newLink = {
          title,
          url,
          image: e.target.result
        };
        links.push(newLink);
        localStorage.setItem('finLinks', JSON.stringify(links));
        displayLinks();
        document.getElementById('linkTitle').value = '';
        document.getElementById('linkURL').value = '';
        document.getElementById('linkImage').value = '';
      };

      reader.readAsDataURL(imageInput.files[0]);
    }

    function displayLinks(filter = '') {
      const list = document.getElementById('linkList');
      list.innerHTML = '';

      links
        .filter(link => link.title.toLowerCase().includes(filter.toLowerCase()))
        .forEach(link => {
          const card = document.createElement('div');
          card.className = 'link-card';

          card.innerHTML = `
            <img src="${link.image}" alt="${link.title}" />
            <h3>${link.title}</h3>
            <a href="${link.url}" target="_blank">Visit Link</a>
          `;

          list.appendChild(card);
        });
    }

    function searchLinks() {
      const keyword = document.getElementById('searchInput').value;
      displayLinks(keyword);
    }

    // Initial display on load
    displayLinks();
  </script>
</body>
